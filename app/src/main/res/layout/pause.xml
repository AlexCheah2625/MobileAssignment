<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/gameoverbackground"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pausetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/baloo_bhaijaan"
                android:text="Game Paused"
                android:textColor="#FFFFFF"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/pointstxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/baloo_bhaijaan"
                android:text="Having a Break?"
                android:textColor="#FFFFFF"
                android:textSize="32dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/resumebtn"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttoncolor1"
                    android:fontFamily="@font/baloo_bhaijaan"
                    android:onClick="Resume"
                    android:text="Resume"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/homebtn1"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttoncolor1"
                    android:fontFamily="@font/baloo_bhaijaan"
                    android:text="Home"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>